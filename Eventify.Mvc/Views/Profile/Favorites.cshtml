@model List<Eventify.Mvc.Models.EventSummaryViewModel>
@{
    ViewData["Title"] = "Favori Etkinliklerim";
}
<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-heart-fill text-danger"></i> Favori Etkinliklerim</h2>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Henüz favorilere eklediğiniz bir etkinlik yok.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var ev in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text">@ev.Description</p>
                            <div class="mb-2 text-muted">
                                <i class="bi bi-geo-alt"></i> @ev.Location <br />
                                <i class="bi bi-calendar"></i> @ev.StartDate.ToString("dd MMM yyyy HH:mm")
                            </div>
                            <a href="/Home/Index#event-@ev.Id" class="btn btn-outline-primary btn-sm">Detaya Git</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 